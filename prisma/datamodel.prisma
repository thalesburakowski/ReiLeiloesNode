type User {
  id: ID! @id
  email: String! @unique
  password: String!
  flgAdmin: Boolean! @default(value: false)
  active: Boolean! @default(value: true)
  profile: Profile @relation(link: INLINE)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Profile {
  id: ID! @id
  owner: User!
  name: String!
  lastName: String!
  cpf: String!
  rg: String!
  birthDate: DateTime!
  nickName: String!
  wallet: Wallet @relation(link: INLINE)
  address: [Address!]
  creditCard: [CreditCard!]
  bankAccount: [BankAccount!]
  selling: [Auction!] @relation(link: TABLE, name: "Owner")
  win: [Auction!] @relation(link: TABLE, name: "Win")
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Address {
  id: ID! @id
  owner: Profile!
  state: String!
  city: String!
  zipCode: String!
  neighboorhood: String!
  street: String!
  number: String!
  complement: String!
  name: String!
  active: Boolean! @default(value: true)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type CreditCard {
  id: ID! @id
  owner: Profile!
  number: String!
  holder: String!
  expireDate: DateTime!
  securityCode: String!
  name: String!
  active: Boolean! @default(value: true)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type BankAccount {
  id: ID! @id
  owner: Profile!
  bank: String!
  accountNumber: String!
  agencyNumber: String!
  ownerName: String!
  ownerCpf: String!
  name: String!
  active: Boolean! @default(value: true)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Wallet {
  id: ID! @id
  owner: Profile!
  credits: Float!
  pendingCredits: Float!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Auction {
  id: ID! @id
  owner: Profile! @relation(name: "Owner")
  winner: Profile @relation(name: "Win")
  title: String!
  categories: [Category!]
  description: String!
  height: Float!
  width: Float!
  depth: Float!
  initialPrice: Float!
  actualPrice: Float!
  closePrice: Float!
  finalPrice: Float
  images: [String!]! @scalarList(strategy: RELATION)
  historic: [Bid!]
  status: String!
  initialDate: DateTime!
  finalDate: DateTime
  closeDate: DateTime!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Category {
  id: ID! @id
  name: String!
  parentalRating: Int!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type Bid {
  id: ID! @id
  owner: Profile!
  auction: Auction!
  value: Float!
  show: Boolean! @default(value: true)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type AuctionRequest {
  id: ID! @id
  auction: Auction! @unique
  approved: Boolean!
  reason: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}

type AuctionCancellationRequest {
  id: ID! @id
  auction: Auction!
  reasonRequest: String!
  status: String!
  reasonResponse: String
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
}
